extends ./layout.jade

mixin space
    |&nbsp

block content
    h1= tabData.title
    p.lead
        = pageText.tabPage.dateColumn
        a(href='#')= tabData.band
    hr
    p
        span.glyphicon.glyphicon-time
        = pageText.tabPage.createDate
        +space
        = tabData.postedDate
        a.btn.btn-primary.pull-right(href='/tab/' + tabData.tabId + '/edit')
            span.glyphicon.glyphicon-pencil
            | Edit
    p
        = pageText.tabPage.author
        +space
        = tabData._author.username
    hr
    //content
    div
        if(tabData.otherInfo)
            each info in tabData.otherInfo
                div= info
    div.tabContainer
        each line in tabData.body
            div.tab-line= line
    hr
    include ./comments.jade